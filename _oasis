OASISFormat: 0.4
Name:        scribble-ocaml-runtime
Version:     0.1
Homepage:    https://github.com/keigoi/scribble-ocaml-runtime
Synopsis:    A runtime for scribble-ocaml
Authors:     Keigo Imai
License:     Apache
Plugins:     META (0.4), DevFiles (0.4)
BuildTools: ocamlbuild

Flag lwt
  Description: build the Lwt submodule
  Default: true

Library scribble
  Path: lib
  Pack: true
  ByteOpt: -I +threads -short-paths
  NativeOpt: -I +threads -short-paths
  BuildDepends: threads, str, linocaml, ppx_implicits
  Modules:
    Base, Endpoint, Session, Direct
  InternalModules:
    Channel, Dchannel, GHashtbl, Unsafe

Library scribble_lwt
  Build$:        flag(lwt)
  Install$:      flag(lwt)
  Path: lwt
  Findlibname: lwt
  Findlibparent: scribble
  Modules:
    Scribble_lwt
  BuildDepends:
    scribble, lwt, lwt.unix, linocaml.lwt
